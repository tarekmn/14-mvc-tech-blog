<div>

  <div id="postDiv" class="card-header">
    <button id="postbtn" class="col-6">Create Post</button>
  </div>
  <div class="belowPost"></div>
</div>

{{#each blogs as |blog|}}

  <div class="card">
    <div class="card-header">
      <h4>{{blog.title}}</h4>
      <h6> Created by {{blog.user.name}} </h6>
    </div>
    <div class="card-body">
      <p class="card-title"> {{format_time blog.createdAt}}</p>
      <p class="card-text">{{blog.description}}</p>
      <a
        href="#"
        id="btn-comment"
        class="btn btn-comment"
        data-blogid={{blog.id}}
      >Comment</a>
    </div>
  </div>

{{/each}}

<script src="/js/comment.js"></script>