

{{#each blogs as |blog| }}

  <div class="card">
    <div class="card-header">
      <h5>{{blog.title}} - {{blog.user.name}} </h5>
      {{!-- <h6> Created by {{blog.user.name}} </h6> --}}
    </div>
    <div class="card-body{{@index}}">
      <p class="card-text">{{blog.description}}</p>
      <p class="card-title"> {{format_time blog.createdAt}}</p>
      
    {{!-- <a href="#" class="btn btn-primary">Button 1</a>
    <a href="#" class="btn btn-primary">Button 2</a> --}}



<p>Comments:</p>
{{#if blog.comments}}
  {{#each blog.comments as |comment|}}
    <div class="d-flex text-muted pt-3">
      <p class="pb-3 mb-0 small lh-sm border-bottom" style="margin-left: 75px">
        {{comment.user.name}}: 
        {{comment.content}}
      </p>
    </div>
  {{/each}}
{{/if}}

  </div>
</div>




{{/each}}
